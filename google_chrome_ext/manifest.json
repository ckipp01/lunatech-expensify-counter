{
  "name": "Lunatech personal budget counter",
  "version": "1.3",
  "description": "Tracks how much money left from your annual amount for Personal Budget",
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "tabs",
    "http://*/*",
    "https://*/*",
    "cookies"
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  "browser_action": {
    "default_popup": "popup.html",
     "default_icon": {
       "16": "images/logo16.ico",
       "32": "images/logo32.png",
       "48": "images/logo48.png",
       "128": "images/logo128.png"
     },
     "default_title": "Expensify counter"
  },
  "icons": {
    "16": "images/logo16.ico",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "options_page": "options.html",
  "manifest_version": 2
}
